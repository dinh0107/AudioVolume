@model AudioVolume.ViewModel.InfoAdminViewModel
@{
    ViewBag.Title = "Welcome to website";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content">
    <div class="row mt-4">
        <div class="col-sm-12 col-md-6 col-lg-3 mt-md-5 mt-3">
            <div class="overview-item">
                <div class="icon"><i class="fal fa-user"></i></div>
                <a class="stretched-link" href="@Url.Action("CreateAdmin", "Mms")">Quản trị viên</a>
                <p class="counter">@Model.Admins</p>
                <div class="info">
                    <i class="far fa-edit me-1"></i> Có thể thay đổi thông tin website
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-3 mt-md-5 mt-3">
            <div class="overview-item">
                <div class="icon icon-product"><i class="fal fa-box"></i></div>
                <a class="stretched-link" href="@Url.Action("ListProduct", "Product")">Sản phẩm</a>
                <p class="counter">@Model.Products</p>
                <div class="info">
                    <i class="fal fa-shopping-cart me-1"></i> Cập nhật liên tục
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-3 mt-md-5 mt-3">
            <div class="overview-item">
                <div class="icon icon-article"> <i class="fal fa-newspaper"></i></div>
                <a class="stretched-link" href="@Url.Action("ListArticle", "Article")">Tin tức</a>
                <p class="counter">@Model.Articles</p>
                <div class="info">
                    <i class="far fa-history me-1"></i> Tin tức mới nhất
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-3 mt-md-5 mt-3">
            <div class="overview-item">
                <div class="icon icon-cart"><i class="fal fa-ad"></i></div>
                <a class="stretched-link" href="@Url.Action("ListBanner", "Banner")">Quảng cáo</a>
                <p class="counter">@Model.Banners</p>
                <div class="info">
                    <i class="far fa-history me-1"></i> Cập nhật liên tục
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-3 mt-md-5 mt-3">
            <div class="overview-item">
                <div class="icon icon-city"><i class="fal fa-mailbox"></i></div>
                <a class="stretched-link" href="@Url.Action("ListContact", "Contact")">Liên hệ</a>
                <p class="counter">@Model.Contacts</p>
                <div class="info">
                    <i class="far fa-history me-1"></i> Cập nhật mới nhất
                </div>
            </div>
        </div>
    </div>
</div>
