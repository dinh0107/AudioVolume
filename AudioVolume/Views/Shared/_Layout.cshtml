@using AudioVolume.Models
@{
    var config = (ConfigSite)HttpContext.Current.Application["ConfigSite"];
}
<!DOCTYPE html>
<html lang="vi-VN">
<head xmlns="http://www.w3.org/1999/xhtml" prefix="og:http://ogp.me/ns# fb:http://www.facebook.com/2008/fbml">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Refresh" content="300">
    <title>@ViewBag.Title</title>
    <meta name="description" content="@Html.Raw(ViewBag.Description)" />
    <meta name="robots" content="@(ViewBag.Robots == null ? "follow, index, max-snippet:-1, max-video-preview:-1, max-image-preview:large" : ViewBag.Robots)" />
    <meta http-equiv="Content-Language" content="en">
    <link rel="canonical" href="@ViewBag.Canonical" />
    @if (ViewBag.Prev != null)
    {
        <link rel="prev" href="@ViewBag.Prev" />
    }
    @if (ViewBag.Next != null)
    {
        <link rel="next" href="@ViewBag.Next" />
    }
    @if (config.Favicon != null)
    {
        <link rel="shortcut icon" href="@Path.Combine("/images/configs/", config.Favicon)?w=64&h=64">
    }
    <meta property="og:locale" content="vi_VN">
    <meta property="og:type" content="website">
    <meta property="og:title" content="@Html.Raw(ViewBag.Title)">
    <meta property="og:description" content="@Html.Raw(ViewBag.Description)">
    <meta property="og:url" content="@ViewBag.Canonical">
    <meta property="og:site_name" content="@Html.Raw(ViewBag.Title)">
    <meta property="og:image" content="@(ViewBag.ImageShare ?? Request.Url?.GetLeftPart(UriPartial.Authority) + Path.Combine("/images/configs/", config.Image))" />
    <meta property="og:image:alt" content="@ViewBag.Title" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

    @Styles.Render("~/Content/css")

    @if (config.GoogleAnalytics != null)
    {
        @Html.Raw(config.GoogleAnalytics)
    }
</head>
<body>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.min.css" integrity="sha512-X/RSQYxFb/tvuz6aNRTfKXDnQzmnzoawgEQ4X8nZNftzs8KFFH23p/BA6D2k0QCM4R0sY1DEy9MIY9b3fwi+bg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    @Html.Action("Header", "Home")
    @RenderBody()
    @Html.Action("Footer", "Home")
    @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval")
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", false)
    <script src="https://cdnjs.cloudflare.com/ajax/libs/owl-carousel/1.3.3/owl.carousel.min.js" integrity="sha512-9CWGXFSJ+/X0LWzSRCZFsOPhSfm6jbnL+Mpqo0o8Ke2SYr8rCTqb4/wGm+9n13HtDE1NQpAEOrMecDZw4FXQGg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD5aWh3zgiZpsm7Ir38aCou0RWjept_TiQ&libraries=places"></script>
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v14.0" nonce="di1pgAbX"></script>

</body>
</html>


