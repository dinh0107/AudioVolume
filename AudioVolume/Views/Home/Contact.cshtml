@using AudioVolume.Models
@{
    var config = (ConfigSite)HttpContext.Current.Application["ConfigSite"];
    ViewBag.Title = "Liên hệ";
}

<section class="banner-contact">
    <img src="~/Content/images/img-main/slider-45.jpg" alt="Banner" />
</section>
<section class="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="contact-info">
                    <h3>@config.Title</h3>
                    <ul class="ul-reset">
                        <li>
                            <b>Địa chỉ: </b>
                            @config.Place
                        </li>
                        @*<li>
                            <b>Điện thoại: </b>
                            <a href="tel:@config.Hotline2">@config.Hotline2</a>
                        </li>*@
                        <li>
                            <b>Hotline: </b>
                            <a href="tel:@config.Hotline">@config.Hotline</a>
                        </li>
                        <li>
                            <b>Email: </b>
                            <a href="mailto:@config.Email">@config.Email</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="map">@Html.Raw(config.GoogleMap)</div>
            </div>
        </div>
    </div>
</section>