@model IEnumerable<AudioVolume.Models.Product>
<ul>
    @foreach (var item in Model)
    {
        <li>
            <a href="@Url.Action("ProductDetail", new { url = item.Url })">
                @if (item.Image != null)
                {
                    <img src="@Path.Combine("/images/products/", item.Image)">
                }
                <p>@item.Name</p>
                <p>
                    @if (item.PriceSale > 0)
                    {
                        <span class="search-pro-price-old">
                            @Html.DisplayFor(a => item.PriceSale)
                        </span>
                        <span class="search-pro-price-new">
                            @Html.DisplayFor(a => item.Price)
                        </span>
                    }
                    else if (item.Price > 0)
                    {
                        <span class="search-pro-price-new">
                            @Html.DisplayFor(a => item.Price)
                        </span>
                    }
                </p>
            </a>
        </li>
    }

</ul>
